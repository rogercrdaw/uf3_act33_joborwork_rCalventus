{% extends 'base.html.twig' %}

{% block content %}

	<table class="table table-hover">
		<tr class="alert-secondary">
			<td>ID</td>
			<td>email</td>
			<td>tipus</td>
			<td></td>
		</tr>
		{% for usuari in llista_usuaris %}
			{% for role in usuari.roles %}
				{% if role == "ROLE_USER" %}
					<tr class="text-secondary">
						<td>{{usuari.id}}</td>
						<td>{{usuari.email}}</td>
						<td>CANDIDAT</td>
						<td>
							<a href="{{ path('admin-perfil', {id:usuari.id}) }}" class="card-link text-secondary"><i class="fa fa-search"></i> veure perfil</a>
						</td>
					</tr>
				{% elseif role == "ROLE_EMPRESA" %}
					<tr class="text-success">
						<td>{{usuari.id}}</td>
						<td>{{usuari.email}}</td>
						<td>EMPRESA</td>
						<td>
							<a href="{{ path('admin-perfil', {id:usuari.id}) }}" class="card-link text-success"><i class="fa fa-search"></i> veure perfil</a>
						</td>
					</tr>
				{% elseif role == "ROLE_ADMIN" %}
					<tr class="text-warning">
						<td>{{usuari.id}}</td>
						<td>{{usuari.email}}</td>
						<td>ADMINISTRADOR</td>
						<td></td>
					</tr>
				{% endif %}
			{% endfor %}

		{% endfor %}
	</table>
{% endblock %}

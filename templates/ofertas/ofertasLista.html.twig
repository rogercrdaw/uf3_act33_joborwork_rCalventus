{% extends 'base.html.twig' %}

{% block body %}

<h3>{{ page_name }}</h3>

{% for oferta in ofertes_llista %}

	<div class="card border-info mb-3">
		<h5 class="card-header">{{oferta.titol}}
		
			{% if app.user %}
				{% if (app.user.id == oferta.empresa.usuario.id) or is_granted('ROLE_ADMIN') %}

				<span style="position:absolute;right: 1em;">
					<a class="text-warning" href="{{ path('oferta_editar', {id:oferta.id}, 'editar') }}" alt="Editar oferta" title="Editar oferta">
						<i class="fa fa-pencil"></i>
					</a>&nbsp;
					<a class="text-danger" href="{{ path('user_update') }}" alt="Eliminar oferta" title="Eliminar oferta">
						<i class="fa fa-trash"></i>
					</a>
				</span>

			{% endif %}
		{% endif %}

	</h5>
	<div class="card-body">
		<p class="card-text text-secondary">{{ oferta.resum }}</p>
		<cite class="text-secondary">
			<a href="{{ path('oferta_detall', {id:oferta.id}) }}" class="card-link text-info">veure detall</a>
		</cite>
		<hr>
		<div class="text-right">
			<cite class="text-secondary">
				Publicada el&nbsp;{{oferta.dataPublicacio|date("d/m/Y")}}&nbsp;por&nbsp;<a href="{{ path('empresa_detall', {id:oferta.empresa.id}) }}" class="card-link text-info">{{ oferta.empresa.nom }}</a>
			</cite>
		</div>
	</div>
</div>{% endfor %}{% endblock %}
